    </ul>
  </nav>
</header>
<style>
/* Estilos generales del header */
header {
  position: fixed;
  top: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 1rem 0;
  z-index: 10;
  width: 100%;
}

/* Estilos para el logo */
header img {
  width: 200px;
}

/* Estilos para el menú en pantallas grandes (escritorio) */
.nav-menu {
  display: flex;
}

.nav-menu ul {
  display: flex;
  list-style: none;
  gap: 1.5rem;
  margin: 0;
  padding: 0;
}

.nav-menu ul li a {
  font-weight: 500;
  text-decoration: none;
  color: #333;
  font-size: 18px;
  transition: color 0.3s;
}

.nav-menu ul li a:hover {
  color: rgb(var(--primary));
  opacity: 0.8;
}

/* Ocultar el icono del menú hamburguesa en pantallas grandes */
.menu-toggle {
  display: none;
}

/* Estilos para pantallas móviles (max-width: 768px) */
@media (max-width: 768px) {
  header {
    position: fixed;
    background-color: rgba(255, 255, 255, 0.27);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  /* Mostrar el menú hamburguesa */
  .menu-toggle {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 30px;
    height: 20px;
    cursor: pointer;
  }

  .menu-toggle span {
    display: block;
    width: 100%;
    height: 3px;
    background-color: #333;
    transition: all 0.3s ease;
  }

  /* Cambios en el icono al activarse */
  .menu-toggle.active span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .menu-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .menu-toggle.active span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  /* Ocultar el menú de navegación por defecto en móviles */
  .nav-menu {
    display: none;
    position: absolute;
    top: 60px;
    right: 0;
    width: 100%;
    background-color: white;
    text-align: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background-color: rgb(255, 255, 255);
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  .nav-menu ul {
    flex-direction: column;
    gap: 1rem;
  }

  .nav-menu ul li a {
    padding: 1rem 0;
    display: block;
    font-size: 16px;
  }

  /* Mostrar el menú cuando el icono está activo */
  .menu-toggle.active + .nav-menu {
    display: flex;
    flex-direction: column;
  }
}
    @keyframes nav-shadown {
    0% {
      @media (max-width: 768px) {
        background-color: rgb(255, 255, 255);
      }
      @media (min-width: 768px) {
        background-color: rgba(255, 255, 255, 0);
      }
    }
    to {
      box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
  }
  @media (min-width: 768px) {
  header {
    animation: nav-shadown 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }
}
</style>

<script>
    document.addEventListener("astro:page-load", () => {
    const sections = document.querySelectorAll("section")
    const navItems = document.querySelectorAll("header nav ul li a")

    const callback = (entries: any[]) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          navItems.forEach((item) => {
            if (item.getAttribute("aria-label") == entry.target.id) {
              item.classList.add("text-blue-500")
            } else {
              item.classList.remove("text-blue-500")
            }
          })
        }
      })
    }

    const observer = new IntersectionObserver(callback, {
      root: null,
      rootMargin: "0px",
      threshold: 0.3,
    })

    sections.forEach((section) => {
      observer.observe(section)
    })

    // Cleanup function
    document.onvisibilitychange = () => {
      if (document.visibilityState === "hidden") {
        observer.disconnect()
      } else {
        sections.forEach((section) => {
          observer.observe(section)
        })
      }
    }
  })

  document.getElementById("hamburger")!.addEventListener("click", function() {
  this.classList.toggle("active");
  document.getElementById("nav-menu")!.classList.toggle("active");
});
</script>