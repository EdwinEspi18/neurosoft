---
import '@fontsource/twinkle-star';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
    <img class="img-gradient" src="/bg-gradient.svg" alt="gradient" class="gradient" />
	</body>
</html>
<style is:global>
	:root {
    --primary: 55, 71, 79;
    --secondary: 158, 158, 158;
    --accent-separtator: 217, 217, 217;
	}
	html {
    font-family: "Poppins", system-ui, sans-serif;
    scroll-behavior: smooth;
	}
  body {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .img-gradient {
    position: absolute;
    right: 0;
    width: 100%;
    top: -10rem;
    z-index: -1;
    user-select: none;
  }

</style>
